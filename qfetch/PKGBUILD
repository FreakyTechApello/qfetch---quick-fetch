# Maintainer: Your Name <you@example.com>
pkgname=qfetch
pkgver=1.0
pkgrel=1
pkgdesc="System info fetcher with multiple themes"
arch=('x86_64')
license=('GPL')
depends=('glibc' 'ncurses')
makedepends=('gcc')
source=("qfetch.c"
        "qfetch-setting.c"
        "themes.tar.gz")
md5sums=('SKIP'
         'SKIP'
         'SKIP')

build() {
    gcc -o qfetch "$srcdir/qfetch.c"
    gcc -o qfetch-setting "$srcdir/qfetch-setting.c" -lncurses
}

package() {
    # бинарники
    install -Dm755 "$srcdir/qfetch" "$pkgdir/usr/bin/qfetch"
    install -Dm755 "$srcdir/qfetch-setting" "$pkgdir/usr/bin/qfetch-setting"

    # если есть архив тем — распакуем
    if [ -f "$srcdir/themes.tar.gz" ]; then
        mkdir -p "$pkgdir/usr/share/qfetch/themes"
        tar -xzf "$srcdir/themes.tar.gz" -C "$pkgdir/usr/share/qfetch/themes"
    fi
}